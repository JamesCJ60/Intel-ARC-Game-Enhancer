<Window x:Class="Flow_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flow_Control"
        xmlns:interop="clr-namespace:Interop"
        mc:Ignorable="d"
        interop:WindowBlur.IsEnabled="True"
        Background="Transparent"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="ROG Flow Control" Height="720" Width="1250">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" />
    </WindowChrome.WindowChrome>
    <Grid Background="#A0161616">
        <DockPanel Margin="0,0,0,0" LastChildFill="True">
            <StackPanel Name="TopBarStackPanel" DockPanel.Dock="Top" Height="35" Background="{DynamicResource SecundaryBackgroundColor}" Margin="0,0,0,-1" Orientation="Horizontal">
                <DockPanel Name="TopBarDockPanel" LastChildFill="False" Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}">
                    <TextBlock DockPanel.Dock="Left" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="10,0,0,0" FontFamily="Asus Rog">ROG FLOW CONTROL</TextBlock>
                    <TextBlock DockPanel.Dock="Right" Foreground="#FF878787" FontSize="32" Margin="0,-7,15,0" Text="&#x2A2F;" Cursor="Hand"/>
                    <TextBlock DockPanel.Dock="Right" Foreground="#FF2D2D2D" FontSize="22" Margin="0,3,24,0" Text="&#9634;"/>
                    <TextBlock DockPanel.Dock="Right" Foreground="#FF878787" FontSize="25" Margin="0,-5,24,0" Text="&#128469;" Cursor="Hand"/>
                </DockPanel>
            </StackPanel>

            <StackPanel DockPanel.Dock="Left" Width="62" Background="{DynamicResource PrimaryBackgroundColor}" Margin="0,0,0,0" Orientation="Vertical">
                <RadioButton x:Name="rdHome" IsChecked="True" Content="Home" Style="{DynamicResource MenuRadioButtonStyle}" Tag="{DynamicResource home}" Height="50" Width="60" Margin="0,1,0,0" />
                <RadioButton x:Name="rdACPresets" IsChecked="False" Content="Presets" Style="{DynamicResource MenuRadioButtonStyle}" Tag="{DynamicResource custom}" Height="50" Width="60" Margin="0,1,0,0" />
                <RadioButton x:Name="rdRGB" IsChecked="False" Content="RGB" Style="{DynamicResource RGBControl}" Tag="{DynamicResource flash}" Height="50" Width="60" Margin="0,1,0,0" />
                <RadioButton x:Name="rdInfo" IsChecked="False" Content="Info" Style="{DynamicResource MenuRadioButtonStyle}" Tag="{DynamicResource info}" Height="50" Width="60" Margin="0,1,0,0" />
                <RadioButton x:Name="rdSettings" IsChecked="False" Content="Settings" Style="{DynamicResource MenuRadioButtonStyle}" Tag="{DynamicResource settings}" Height="50" Width="60" Margin="0,1,0,0" />
            </StackPanel>

            <Frame x:Name="PagesNavigation" NavigationUIVisibility="Hidden">
                <!-- Page Content -->
                
            </Frame>
        </DockPanel>
    </Grid>
</Window>
