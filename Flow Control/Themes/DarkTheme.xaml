<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#050d23"/>
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#081539"/>

    <!-- Primary Colors -->
    <LinearGradientBrush x:Key="PrimaryBlueColor" EndPoint="0,0" StartPoint="1,1"/>
    <LinearGradientBrush x:Key="PrimaryBlueColorHover" EndPoint="0,0" StartPoint="1,1"/>
    <LinearGradientBrush x:Key="PrimaryBlueColorDown" EndPoint="0,0" StartPoint="1,1"/>
    <SolidColorBrush x:Key="PrimaryGrayColor" Color="LightGray"/>

    <!-- Secundary Colors -->
    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#CEE8FB"/>
    <SolidColorBrush x:Key="SecundaryGrayColor" Color="#081539"/>

    <!-- Typograhy Colors -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="White"/>
    <SolidColorBrush x:Key="TextSecundaryColor" Color="LightGray"/>

    <!-- Icons Colors -->
    <SolidColorBrush x:Key="ActionIconColor" Color="#434344"/>

</ResourceDictionary>